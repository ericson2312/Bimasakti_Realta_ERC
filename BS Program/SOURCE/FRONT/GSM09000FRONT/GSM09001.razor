@inherits R_Page
@using GSM09000COMMON.DTOs.GSM09000
@using GSM09000COMMON.DTOs.GSM09001
@using GSM09000COMMON
@using GSM09000MODEL


<R_StackLayout>
    <R_StackLayout Row="true">
        <R_ItemLayout col="2">
            <R_Label>@_localizer["_TenantCategory"]</R_Label>
        </R_ItemLayout>

        <R_ItemLayout col="3">
            <R_TextBox @bind-Value="@loTenantViewModel.loTenantCategory.CCATEGORY_ID"
                       R_ConductorGridSource="@_conductorTenantRef"
                       Enabled="false"></R_TextBox>
        </R_ItemLayout>
        <R_ItemLayout col="7">
            <R_TextBox @bind-Value="@loTenantViewModel.loTenantCategory.CCATEGORY_NAME"
                       R_ConductorGridSource="@_conductorTenantRef"
                       Enabled="false"></R_TextBox>
        </R_ItemLayout>
    </R_StackLayout>
    <R_StackLayout Row>
        <R_ItemLayout col="12">
            <R_Grid @ref="@_gridTenantRef"
                    DataSource="@loTenantViewModel.loTenantList"
                    Pageable="true"
                    R_ConductorGridSource="@_conductorTenantRef"
                    R_GridType="@R_eGridType.Original"
                    AllowAddNewRow="false"
                    AllowEditRow="false"
                    AllowDeleteRow="false"
                    Height="300px"
                    R_ServiceGetListRecord="@Grid_Tenant_R_ServiceGetListRecord">
                <R_GridColumns>
                    <R_GridTextColumn FieldName=@nameof(GSM09001DTO.CTENANT_ID) HeaderText="@_localizer["_TenantId"]" Width="150px"></R_GridTextColumn>
                    <R_GridTextColumn FieldName=@nameof(GSM09001DTO.CTENANT_NAME) HeaderText="@_localizer["_TenantName"]" Width="300px"></R_GridTextColumn>
                    <R_GridTextColumn FieldName="@nameof(GSM09001DTO.CTENANT_CATEGORY_NAME)" HeaderText="@_localizer["_TenantGroup"]" Width="150px"></R_GridTextColumn>
                    <R_GridTextColumn FieldName="@nameof(GSM09001DTO.CTENANT_TYPE_NAME)" HeaderText="@_localizer["_TenantType"]" Width="150px"></R_GridTextColumn>
                    <R_GridTextColumn FieldName="@nameof(GSM09001DTO.CUNIT_NAME)" HeaderText="@_localizer["_Units"]" Width="150px"></R_GridTextColumn>
                    <R_GridTextColumn FieldName="@nameof(GSM09001DTO.CPHONE1)" HeaderText="@_localizer["_Phone1"]" Width="150px"></R_GridTextColumn>
                    <R_GridTextColumn FieldName="@nameof(GSM09001DTO.CEMAIL)" HeaderText="@_localizer["_Email"]" Width="200px"></R_GridTextColumn>
                    <R_GridTextColumn FieldName="@nameof(GSM09001DTO.CUPDATE_BY)" HeaderText="@_localizer["_UpdatedBy"]" Width="150px"></R_GridTextColumn>
                    <R_GridDatePickerColumn FieldName="@nameof(GSM09001DTO.DUPDATE_DATE)" HeaderText="@_localizer["_UpdatedDate"]" Width="150px"></R_GridDatePickerColumn>
                    <R_GridTextColumn FieldName="@nameof(GSM09001DTO.CCREATE_BY)" HeaderText="@_localizer["_CreatedBy"]" Width="150px"></R_GridTextColumn>
                    <R_GridDatePickerColumn FieldName="@nameof(GSM09001DTO.DCREATE_DATE)" HeaderText="@_localizer["_CreatedDate"]" Width="150px"></R_GridDatePickerColumn>
                </R_GridColumns>
            </R_Grid>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>


<R_StackLayout Row>
    <R_ItemLayout col="2">
        <R_Popup R_ConductorGridSource="@_conductorTenantRef"
                 Enabled="@IsMoveEnabled"
                 R_Before_Open_Popup="@R_Before_Open_Popup_Tenant_Move"
                 R_After_Open_Popup="@R_After_Open_Popup_Tenant_Move">
            @_localizer["_Move"]
        </R_Popup>
    </R_ItemLayout>
</R_StackLayout>

<R_ConductorGrid @ref="@_conductorTenantRef"
                 R_ViewModel="@loTenantViewModel"
                 R_IsHeader>
</R_ConductorGrid>
