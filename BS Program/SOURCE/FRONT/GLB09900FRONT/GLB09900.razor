@page "/GLB09900"
@inherits R_Page
@attribute [R_Page(Title = "Close GL Period")]
@*@inject R_ILocalizer<SAB00900FrontResources.Resources_Dummy_Class> _localizer*@


<R_StackLayout Row Class="justify-content-center">
    <R_ItemLayout col="2"> <R_Label FontSize="16">Current Period</R_Label></R_ItemLayout>
    <R_ItemLayout col="2"> <R_Label FontSize="16" FontColor="@R_eFontColor.Danger">@_CloseGLPeriod_viewModel.SystemParam.CURRENT_PERIOD_DISPLAY</R_Label></R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row ><R_ItemLayout col="2"> <R_Label></R_Label></R_ItemLayout></R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="12">
        <R_Label FontSize="16" FontColor="@R_eFontColor.Primary">The Period End process will disable journal posting and changes for the current period and cannot be reopened!</R_Label>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="11">
        <R_Label FontSize="16" FontColor="@R_eFontColor.Primary">Please make sure that all journals have been posted and checked.</R_Label>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row><R_ItemLayout col="2"> <R_Label FontColor="@R_eFontColor.Danger"></R_Label></R_ItemLayout></R_StackLayout>

<R_StackLayout Row>
    <R_ItemLayout col="11">
        <R_Label FontSize="16" FontColor="@R_eFontColor.Primary">DO BACK UP your data before running this process!</R_Label>
    </R_ItemLayout>
</R_StackLayout>

<R_StackLayout Row Class="mt-2 justify-content-center">
    <R_ItemLayout>
        <R_Button OnClick="@Button_OnClickPeriodEndAsync" FontSize="16">Period End</R_Button>
        <R_Button OnClick="@Button_OnClickCloseAsync" FontSize="16">Close</R_Button>

    </R_ItemLayout>
</R_StackLayout>