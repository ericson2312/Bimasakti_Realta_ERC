@inherits R_Page
@using LMM03500COMMON.DTOs.LMM03500
@attribute [R_Page(Title = "Currency")]

<R_StackLayout Style="width:600px">
    <R_StackLayout Row>
        <R_ItemLayout col="12">
            <R_Grid @ref="@_gridRef"
                    DataSource="@loViewModel.loCurrencyList"
                    R_ServiceGetListRecord="R_ServiceGetListRecordAsync"
                    Pageable
                    Height="300px"
                    PageSize="5">
                <R_GridColumns>
                    <R_GridTextColumn FieldName="@nameof(GetCurrencyDTO.CCURRENCY_CODE)" HeaderText="@_localizer["_Id"]"></R_GridTextColumn>
                    <R_GridTextColumn FieldName="@nameof(GetCurrencyDTO.CCURRENCY_NAME)" HeaderText="@_localizer["_Name"]"></R_GridTextColumn>
                </R_GridColumns>
            </R_Grid>
            </R_ItemLayout>
            </R_StackLayout>

            <R_StackLayout Row Class="justify-content-end">
        <R_ItemLayout col="2">
            <R_Button OnClick="Button_OnClickOkAsync">
                @_localizer["_OK"]
            </R_Button>
        </R_ItemLayout>
        <R_ItemLayout col="2">
            <R_Button OnClick="Button_OnClickCloseAsync">
                @_localizer["_Cancel"]
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>
</R_StackLayout>