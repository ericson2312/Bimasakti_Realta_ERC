@inherits R_Page
@attribute [R_Page(Title = "Other Charges Lookup")]

<R_StackLayout Style="width: 1000px">
    <R_StackLayout Row>
        <R_Grid @ref="@_gridRef"
                DataSource="_viewModel.LookupOtherCharges"
                R_ServiceGetListRecord="Lookup_R_ServiceGetListRecordAsync"
                Pageable
                PageSize="5">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CCHARGES_ID" HeaderText="Charges Id"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CCHARGES_NAME" HeaderText="Charges Name"></R_GridTextColumn>
                <R_GridTextColumn FieldName="UNIT_UTILITY_CHARGE" HeaderText="Unit Utility Charge"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CCHARGES_TYPE" HeaderText="Charges Type"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CCHARGES_TYPE_DESCR" HeaderText="Charges Type Descr"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
        </R_StackLayout>

        <R_StackLayout Row Class="justify-content-end">
        <R_ItemLayout>
            <R_Button OnClick="Button_OnClickOkAsync">
                OK
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                Cancel
            </R_Button>
        </R_ItemLayout>
    </R_StackLayout>

</R_StackLayout>