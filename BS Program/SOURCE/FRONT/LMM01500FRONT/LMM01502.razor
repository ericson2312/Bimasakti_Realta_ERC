@inherits R_Page
@attribute [R_Page(Title = "Bank Lookup")]

<R_StackLayout Style="width: 700px">
    <R_StackLayout Row>
        <R_Grid @ref="@_gridRef"
                DataSource="_viewModel.LookupBank"
                R_ServiceGetListRecord="LookupBank_R_ServiceGetListRecordAsync"
                Pageable
                PageSize="5">
            <R_GridColumns>
                <R_GridTextColumn FieldName="CCB_CODE" HeaderText="Bank Code"></R_GridTextColumn>
                <R_GridTextColumn FieldName="CCB_NAME" HeaderText="Bank Name"></R_GridTextColumn>
            </R_GridColumns>
        </R_Grid>
        </R_StackLayout>

        <R_StackLayout Row Class="justify-content-end">
            <R_Button OnClick="Button_OnClickOkAsync">
                OK
            </R_Button>
            <R_Button OnClick="Button_OnClickCloseAsync">
                Cancel
            </R_Button>
    </R_StackLayout>

</R_StackLayout>